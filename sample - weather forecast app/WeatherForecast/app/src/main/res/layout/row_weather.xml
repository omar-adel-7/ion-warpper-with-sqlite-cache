<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgvIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imgvIcon"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/txtvDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/txtvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@+id/txtvDay"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"

            />

        <LinearLayout
            android:id="@+id/rlHighTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@+id/txtvDate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
             >

            <TextView
                android:id="@+id/txtvHighTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highTemp"
                android:textColor="@android:color/black"
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/txtvHighTempValue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                 android:textColor="@android:color/holo_blue_dark"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rlLowTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@+id/rlHighTemp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            >

            <TextView
                android:id="@+id/txtvLowTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lowTemp"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/txtvLowTempValue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/holo_blue_dark"
                 />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>